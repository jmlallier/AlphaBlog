<div class="container">
  <div class="row">
  <div class="col-sm-10 col-sm-offset-1 text-center">
    <%= form_for(:session, :html => { :class => "form-horizontal post" }, url: login_path) do |f| %>

      <div class="form-group">
        <%= f.label :email, :class => 'control-label col-sm-2' %>
        <div class="col-sm-8">
          <%= f.email_field :email, :class => 'form-control', placeholder: "Enter your email" %>
          <%=f.error_span(:email) %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, :class => 'control-label col-sm-2' %>
        <div class="col-sm-8">
          <%= f.password_field :password, :class => 'form-control', placeholder: "Password", autocomplete: "off" %>
          <%=f.error_span(:password) %>
        </div>
      </div>

      <div class="form-group">
        <div class="post-options">
          <div class="col-sm-offset-2 col-sm-8 ">
            <%= f.submit "Log in", :class => 'pull-left btn btn-primary' %>
          </div>
        </div>
      </div>

    <% end %><!-- end form -->
  </div>
    
  </div>
</div>