<div class="container">
 
 <h1 class="text-center">Sign Up</h1>
  <%= form_for @user, :html => { :class => "form-horizontal article" } do |f| %>

  <%= render 'shared/errors', obj: @user %>

  <div class="form-group">
    <%= f.label :username, :class => 'control-label col-sm-1' %>
    <div class="col-sm-7">
      <%= f.text_field :username, :class => 'form-control', placeholder: "username" %>
      <%=f.error_span(:username) %>
    </div>

  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-sm-1' %>
    <div class="col-sm-7">
      <%= f.email_field :email, :class => 'form-control', placeholder: "yourname@email.com" %>
      <%=f.error_span(:email) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, :class => 'control-label col-sm-1' %>
    <div class="col-sm-7">
      <%= f.password_field :password, :class => 'form-control', placeholder: "Password" %>
      <%=f.error_span(:password) %>
    </div>
  </div>

  <div class="form-group">
    <div class="post-options">
      <div class="col-sm-offset-1 col-sm-7">
        <%= f.submit "Sign up", :class => 'btn btn-primary' %>
      </div>
    </div>
  </div>

  <% end %>
</div>