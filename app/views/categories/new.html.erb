
 <div class="container">
 <h1 align="center">Create a new Category</h1>

   <%= form_for(@category, :html => { :class => "form-horizontal post" }) do |f| %>

   <%= render 'shared/errors', obj: @category %>

  <div class="row">
    <div class="form-group">
      <div class="col-sm-4">
        <%= f.label :category, :class => 'control-label pull-right' %>
      </div>
      <div class="col-sm-5">
        <%= f.text_field :name, :class => 'form-control pull-right', placeholder: "Travel, etc." %>
        <%=f.error_span(:category) %>
      </div>

    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <div class="post-options">
        <div class="col-sm-offset-4 col-sm-4">
          <%= f.submit :class => 'pull-left btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>

  <% end %>
</div>